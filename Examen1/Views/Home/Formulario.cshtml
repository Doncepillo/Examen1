
@{
    ViewData["Title"] = "Formulario";
}
<h2>Formulario</h2>
<fieldset>
    <legend>Mantendor de Vacas</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                DIIO
            </span>
            <span class="col-md-6">
                @Html.TextBox("diio", null, new { @class = "form-control" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control" })
            </span>
        </div>


        <div class="form-group">
            <span class="col-md-2">
                Sexo
            </span>
            <span class="col-md-6">
                @Html.DropDownList("sexo", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Macho", Value="Macho"},
                        new SelectListItem{Text="Hembra", Value="Hembra"}
                    },
                                                 new { @class = "form-control" }
                                                 )
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Raza
            </span>
            <span class="col-md-6">
                @Html.DropDownList("raza", new List<SelectListItem>
                    {
                        new SelectListItem{Text="HOLSTEIN", Value="HOLSTEIN"},
                        new SelectListItem{Text="JERSEY", Value="JERSEY"},
                        new SelectListItem{Text="AYRSHIRE", Value="AYRSHIRE"}
                    },
                                                 new { @class = "form-control" }
                                                 )
            </span>
        </div>


        <div class="form-group">
            <span class="col-md-2">
                Edad
            </span>
            <span class="col-md-6">
                @Html.TextBox("edad", null, new { @class = "form-control" })
            </span>
        </div>


        <div class="form-group">
            <span class="col-md-2">
                Tipo
            </span>
            <span class="col-md-6">
                @Html.DropDownList("tipo", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Vaca", Value="Vaca"},
                        new SelectListItem{Text="Ternera", Value="Ternera"},
                        new SelectListItem{Text="Ternero", Value="Ternero"},
                        new SelectListItem{Text="Toro", Value="Toro"},
                        new SelectListItem{Text="Buey", Value="Buey"}
                    },
                                                 new { @class = "form-control" }
                                                 )
            </span>
        </div>


        <div class="form-group">
            <span class="col-md-2">
                Rebaño
            </span>
            <span class="col-md-6">
                @Html.DropDownList("rebaño", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Animales Gordos", Value="Animales Gordos"},
                        new SelectListItem{Text="Animales Enfermos", Value="Animales Enfermos"},
                        new SelectListItem{Text="Animales a Eliminar", Value="Animales a Eliminar"}
                    },
                                                 new { @class = "form-control" }
                                                 )
            </span>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar formulario</button>
        </div>

    }

</fieldset>
